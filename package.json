{
  "name": "pushpulljs",
  "version": "1.0.6",
  "description": "Convenience tool to make your files' content flexible",
  "bin": {
    "pushpull": "./bin/cli.js"
  },
  "main": "./src/index.js",
  "files": [
    "bin",
    "src"
  ],
  "scripts": {
    "lint": "npm run prettier && npm run eslint",
    "prettier": "prettier \"**/*.{js,json,md,yml,yaml}\" --write --loglevel error",
    "eslint": "eslint . --fix",
    "test": "jest",
    "test:memheap": "node --expose-gc ./node_modules/.bin/jest --runInBand --logHeapUsage",
    "test:memleaks": "jest --runInBand --detectLeaks",
    "prepublishOnly": "npm audit && npm run lint && npm run test && npm run test:memleaks",
    "upgrade-lock": "shx rm -rf package-lock.json node_modules && npm i --package-lock=true"
  },
  "engines": {
    "node": ">=8.0.0",
    "npm": ">=6.0.0"
  },
  "devDependencies": {
    "eslint": "^6.7.2",
    "eslint-config-prettier": "^6.7.0",
    "eslint-plugin-jest": "^22.21.0",
    "jest": "^25.1.0",
    "prettier": "^1.19.1",
    "shx": "^0.3.2",
    "weak-napi": "^1.0.3"
  },
  "keywords": [
    "cli",
    "tool",
    "flexible",
    "config"
  ],
  "author": "Richard Lindner <rlindner81@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git://github.com/rlindner81/pushpull.git"
  },
  "bugs": {
    "url": "https://github.com/rlindner81/pushpull/issues"
  }
}
